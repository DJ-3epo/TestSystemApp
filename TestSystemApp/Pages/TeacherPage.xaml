<Page x:Class="TestSystemApp.Pages.TeacherPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Teacher Page" Height="450" Width="800">
    <Grid>
        <!-- Таблица вопросов -->
        <DataGrid x:Name="QuestionsDataGrid" HorizontalAlignment="Left" VerticalAlignment="Top" Width="750" Height="200" AutoGenerateColumns="True" />

        <!-- Кнопки для добавления, редактирования и удаления вопросов -->
        <Button x:Name="AddQuestionButton" Content="Add Question" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Height="30" Margin="10,220,0,0" Click="AddQuestionButton_Click"/>
        <Button x:Name="EditQuestionButton" Content="Edit Question" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Height="30" Margin="120,220,0,0" Click="EditQuestionButton_Click"/>
        <Button x:Name="DeleteQuestionButton" Content="Delete Question" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Height="30" Margin="230,220,0,0" Click="DeleteQuestionButton_Click"/>
        <Button x:Name="GenerateReportButton" Content="Generate Report" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Height="30" Margin="356,220,0,0"  Click="GenerateReportButton_Click"/>
        <!-- Таблица результатов тестирования -->
        <DataGrid x:Name="TestingResultsDataGrid" HorizontalAlignment="Left" VerticalAlignment="Top" Width="750" Height="200" Margin="0,260,0,0" AutoGenerateColumns="True"/>

        
     
    </Grid>
</Page>
