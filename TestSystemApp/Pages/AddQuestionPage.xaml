<Page x:Class="TestSystemApp.Pages.AddQuestionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Add Question Page">

    <Grid>
        <TextBox x:Name="QuestionTextBox" Width="200" Height="25" Margin="10" />
        <TextBox x:Name="Answer1TextBox" Width="200" Height="25" Margin="10,40,10,10" />
        <TextBox x:Name="Answer2TextBox" Width="200" Height="25" Margin="10,70,10,10" />
        <TextBox x:Name="Answer3TextBox" Width="200" Height="25" Margin="10,100,10,10" />
        <TextBox x:Name="Answer4TextBox" Width="200" Height="25" Margin="10,130,10,10" />
        <TextBox x:Name="CorrectAnswerTextBox" Width="200" Height="25" Margin="10,160,10,10" />

        <Button Content="Save" Width="75" Height="30" Margin="10,200,10,10" VerticalAlignment="Top" HorizontalAlignment="Left" Click="SaveButton_Click" />
    </Grid>
</Page>
